<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.akun.guru.AddGuruFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_variant1"
        android:padding="@dimen/padding_layout">

        <ImageView
            android:id="@+id/iv_addguru_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_name"
            style="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Guru"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_addguru_back"
            app:layout_constraintStart_toEndOf="@id/iv_addguru_back"
            app:layout_constraintTop_toTopOf="@id/iv_addguru_back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_namalengkap"
            style="@style/TextAppearance.MdcTypographyStyles.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nama Lengkap"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addguru_namalengkap"
            style="@style/TextField.Outlined.White.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_namalengkap">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_addguru_namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_til_android_blue"
                tools:text="2221231" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_nik"
            style="@style/TextAppearance.MdcTypographyStyles.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="NIK"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_addguru_namalengkap" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addguru_nik"
            style="@style/TextField.Outlined.White.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_nik">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_addguru_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/bg_til_android_blue"
                tools:text="2221231" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_password"
            style="@style/TextAppearance.MdcTypographyStyles.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_addguru_nik" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addguru_password"
            style="@style/TextField.Outlined.White.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_addguru_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/bg_til_android_blue"
                tools:text="2221231" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_alamat"
            style="@style/TextAppearance.MdcTypographyStyles.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Alamat"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_addguru_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addguru_alamat"
            style="@style/TextField.Outlined.White.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_alamat">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_addguru_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_til_android_blue"
                tools:text="2221231" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_email"
            style="@style/TextAppearance.MdcTypographyStyles.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_addguru_alamat" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addguru_email"
            style="@style/TextField.Outlined.White.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_addguru_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_til_android_blue"
                tools:text="2221231" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addguru_hp"
            style="@style/TextAppearance.MdcTypographyStyles.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nomor Hp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_addguru_email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addguru_hp"
            style="@style/TextField.Outlined.White.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mtv_addguru_hp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_addguru_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/bg_til_android_blue"
                tools:text="2221231" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_addguru_simpan"
            style="@style/MaterialButton.Custom"
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/til_addguru_hp"
            android:text="Simpan"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_addguru_logout"
            style="@style/MaterialButton.Custom"
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/til_addguru_hp"
            android:text="Logout"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>