<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.pesan.AddPesanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_variant1">

        <ImageView
            android:id="@+id/iv_addpesan_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/padding_layout"
            android:layout_marginTop="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addpesan_name"
            style="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_addpesan_back"
            app:layout_constraintStart_toEndOf="@id/iv_addpesan_back"
            app:layout_constraintTop_toTopOf="@id/iv_addpesan_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_addpesan_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_layout"
            app:layout_constraintTop_toBottomOf="@id/mtv_addpesan_name">

            <include
                android:id="@+id/include_addpesan_container"
                layout="@layout/rv_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addpesan_titleperkembangan"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_layout"
            android:text="Perkembangan"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_addpesan_container" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtv_addpesan_addgrowth"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/padding_layout"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="0dp"
            android:text="Tambah Data"
            android:textAllCaps="false"
            android:textColor="@color/black1"
            android:textSize="8dp"
            app:cornerRadius="2dp"
            app:layout_constraintBottom_toBottomOf="@id/mtv_addpesan_titleperkembangan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mtv_addpesan_titleperkembangan" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_addpesan_growth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/mtv_addpesan_titleperkembangan"
            tools:itemCount="2"
            tools:listitem="@layout/rv_growth" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_addpesan_titlenote"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_layout"
            android:layout_marginTop="12dp"
            android:text="Catatan"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_addpesan_growth" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtv_addpesan_addnote"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/padding_layout"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="0dp"
            android:text="Tambah Data"
            android:textAllCaps="false"
            android:textColor="@color/black1"
            android:textSize="8dp"
            app:cornerRadius="2dp"
            app:layout_constraintBottom_toBottomOf="@id/mtv_addpesan_titlenote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mtv_addpesan_titlenote" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_addpesan_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/mtv_addpesan_titlenote"
            tools:itemCount="2"
            tools:listitem="@layout/rv_note" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_addpesan_simpan"
            style="@style/MaterialButton.Custom"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/padding_layout"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:text="Simpan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_addpesan_note" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>